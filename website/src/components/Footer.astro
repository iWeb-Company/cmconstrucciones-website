---
import Instagram from "./Icons/Instagram.astro"
import Linkedin from "./Icons/Linkedin.astro"
import Whatsapp from "./Icons/Whatsapp.astro"
import Facebook from "./Icons/Facebook.astro"
import Iweb from "./Icons/Iweb.astro"
import Logo from "./Icons/Logo.astro"
---

<footer class="flex flex-col">
    <div class="py-2 flex flex-col bg-footer">
    <h6 class="text-white mb-2 text-center text-[30px]">Tambien podes contactarnos a traves de</h6>
        <ul class="flex justify-center gap-x-32 mb-3">
            <li>
                <Instagram />
            </li>
            <li>
                <Whatsapp/>
            </li>
            <li>
                <Facebook />
            </li>
            <li>
                <Linkedin />
            </li>
        </ul>
    </div>
    <div class="flex justify-between items-center">
        <span>@2024 CMC - Todos los derechos reservados</span>
        <Logo class="w-20" />
        <div class="flex items-center text-md">
            <span>Desarrollado por</span>
            <Iweb />
        </div>
    </div>
</footer>
<style>
    .bg-footer{
        background: linear-gradient(270deg, #21254A 1.5%, #3748B0 50%, #21254A 100%);
    }
</style>
